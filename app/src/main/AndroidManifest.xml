<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pragjan.leaguescheduler" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".enterPlayerName"
            android:label="@string/title_activity_enter_player_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".leagueMatchTable"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_league_match_table"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".pointTable"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_point_table" >
        </activity>
    </application>

</manifest>
